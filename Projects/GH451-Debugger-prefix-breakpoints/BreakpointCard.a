BPCARD_SLOT = 4
BPCARD_IO_BASE = $C080 + BPCARD_SLOT*16

BPCARD_STATUS						= BPCARD_IO_BASE+0	; R
BPCARD_CMD_RESET					= BPCARD_IO_BASE+1	; R
BPCARD_CMD_INTERCEPT_BY_CARD		= BPCARD_IO_BASE+2	; R
BPCARD_CMD_INTERCEPT_BY_DEBUGGER	= BPCARD_IO_BASE+3	; R
BPCARD_REG_ID4	= 4					; R
BPCARD_REG_ID15	= $f				; R

BPCARD_FIFO = BPCARD_IO_BASE+0		; W

STAT_MATCH		= 1<<7
STAT_MISMATCH	= 1<<6
STAT_FULL		= 1<<1
STAT_EMPTY		= 1<<0

; FIFO: BP type
BPTYPE_UNKNOWN=0
BPTYPE_PC=1
BPTYPE_MEM=2
BPTYPE_DMA=3

; FIFO: BP access
BPACCESS_R=0
BPACCESS_W=1
BPACCESS_RW=2
